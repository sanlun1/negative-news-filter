{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "version": "0.1.3",
  "description": "__MSG_desc__",
  "default_locale": "ja",
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "32": "icons/32.png",
    "16": "icons/16.png"
  },
  "browser_action": {
    "default_icon": "icons/16.png",
    "default_title": "Negative News Filter",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "main.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },
  "permissions": [
    "storage",
    "https://raw.githubusercontent.com/sanlun1/negative-news-filter/main/rules.json"
    ]
}